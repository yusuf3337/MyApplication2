<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:rotationY="0"
    tools:context=".registerScreen.RegisterPage">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="941dp"
        android:rotationY="0"
        tools:layout_editor_absoluteY="1dp">

  <TextView
      android:id="@+id/loginPageTextView"
      android:layout_width="332dp"
      android:layout_height="90dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_alignParentRight="true"
      android:layout_marginTop="64dp"
      android:gravity="top"
      android:lineSpacingExtra="3sp"
      android:text="Welcome back! Glad to see you, Again!"
      android:textAlignment="center"
      android:textColor="#000000"
      android:textSize="30sp"
      android:textStyle="bold"
      android:translationY="-1.5sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="MissingConstraints,RtlCompat" />

      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/textInputLayout5"
          android:layout_width="308dp"
          android:layout_height="64dp"
          android:layout_marginStart="15dp"
          android:layout_marginTop="200dp"
          android:layout_marginEnd="15dp"
          app:boxStrokeColor="#000000"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/loginPageTextView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:textAlignment="center"
            android:textColor="#000000" />
      </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/textInputLayout6"
      android:layout_width="308dp"
      android:layout_height="64dp"
      android:layout_marginStart="15dp"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="15dp"
      app:boxStrokeColor="#000000"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textInputLayout5">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textAlignment="center"
        android:textColor="#000000" />
  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/textInputLayout7"
      android:layout_width="308dp"
      android:layout_height="64dp"
      android:layout_marginStart="15dp"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="15dp"
      app:boxStrokeColor="#000000"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textInputLayout6">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textAlignment="center"
        android:textColor="#000000"
        android:inputType="textPassword"/>
  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
      android:layout_width="308dp"
      android:layout_height="64dp"
      android:layout_marginStart="15dp"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="15dp"
      app:boxStrokeColor="#000000"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textInputLayout7">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/confirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:onClick="register2"
        android:textAlignment="center"
        android:textColor="#000000" />
  </com.google.android.material.textfield.TextInputLayout>

      <Button
          android:id="@+id/registerButton2"
          android:layout_width="330dp"
          android:layout_height="56dp"
          android:layout_marginStart="23dp"
          android:layout_marginEnd="22dp"
          android:backgroundTint="#4CAF50"
          android:onClick="register2"
          android:text="Accept and Continue"
          android:textColor="#FFFFFF"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.444"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.914" />

  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="357dp"
      android:layout_height="113dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.278"
      app:srcCompat="@drawable/logo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </LinearLayout>
</ScrollView>